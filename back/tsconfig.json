{
  "compilerOptions": {
    "target": "ES6", 
    "module": "commonjs",
    "lib": ["es6"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, 
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "express"
    ]
  },
  "include": [
    "src/**/*" // Aseg√∫rate de que esta ruta sea correcta
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
